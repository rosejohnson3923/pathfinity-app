# Pathfinity Environment Variables Example
# Copy this file to .env and fill in your values

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=your_connection_string_here
AZURE_STORAGE_ACCOUNT_NAME=pathfinitystorage

# Azure TTS Configuration (for future use)
AZURE_SPEECH_KEY=your_speech_key_here
AZURE_SPEECH_REGION=eastus

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# ================================================================
# Career Challenge AI Configuration
# ================================================================

# AI Content Generation Settings
AI_MODEL=gpt-4-turbo-preview

# Max tokens for different content types
AI_MAX_TOKENS_CHALLENGE=800
AI_MAX_TOKENS_ROLE_CARD=600
AI_MAX_TOKENS_SYNERGY=400

# Temperature settings (0.0 to 1.0, higher = more creative)
AI_TEMPERATURE_CHALLENGE=0.8
AI_TEMPERATURE_ROLE_CARD=0.9
AI_TEMPERATURE_SYNERGY=0.7

# Content moderation
AI_MODERATION_ENABLED=true
AI_AUTO_APPROVE_THRESHOLD=0.95

# Rate limiting
AI_REQUESTS_PER_MINUTE=20
AI_DELAY_BETWEEN_REQUESTS=1000

# Cache settings
AI_CACHE_EXPIRY_HOURS=168
AI_CACHE_MAX_SIZE=1000

# Industry generation limits
AI_MAX_CHALLENGES_PER_INDUSTRY=15
AI_MAX_ROLES_PER_INDUSTRY=20
AI_MAX_SYNERGIES_PER_INDUSTRY=10

# Feature flags for Career Challenge
FEATURE_AI_GENERATION_ENABLED=true
FEATURE_MANUAL_CONTENT_REVIEW=true
FEATURE_BULK_GENERATION=false

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Cloud Configuration (for existing YouTube service)
GOOGLE_API_KEY=your_google_api_key_here

# Environment
NODE_ENV=development

# Database
DATABASE_URL=your_database_connection_string

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
VITE_USE_REAL_LEADERBOARD=false  # false = mock data (safe for testing), true = real Supabase data