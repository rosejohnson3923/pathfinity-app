# Multi-Model AI System Configuration

# ============================================
# FEATURE FLAGS
# ============================================
# Enable multi-model system (false = use GPT-4o for everything)
ENABLE_MULTI_MODEL=false

# Enable validation layer with DeepSeek
ENABLE_VALIDATION=false

# Enable cost tracking and metrics
ENABLE_COST_TRACKING=true

# Force a specific model (overrides smart routing)
# Options: phi-4, llama-3.3-70b, gpt-4o-mini, gpt-4o, gpt-35-turbo, deepseek-v3
# Leave empty for smart routing
FORCE_MODEL=

# ============================================
# AZURE KEY VAULT
# ============================================
AZURE_KEY_VAULT_URL=https://pathfinity-kv-2823.vault.azure.net/

# For local development only (production uses Managed Identity)
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=b6dfd179-ee59-4f1b-addf-0988e75d9cb7

# ============================================
# ROLLOUT CONFIGURATION
# ============================================
# Percentage of traffic to route through multi-model (0-100)
MULTI_MODEL_ROLLOUT_PERCENTAGE=0

# Target grades for initial rollout (comma-separated)
# Example: K,1,2 for kindergarten through 2nd grade
MULTI_MODEL_TARGET_GRADES=K,1,2

# ============================================
# VALIDATION SETTINGS
# ============================================
# Validation strictness: low, medium, high
VALIDATION_STRICTNESS=medium

# Max validation retries
MAX_VALIDATION_RETRIES=2

# ============================================
# PERFORMANCE SETTINGS
# ============================================
# Max retries for failed model calls
MAX_RETRIES=3

# Model timeout in milliseconds
MODEL_TIMEOUT_MS=30000

# Validation timeout in milliseconds
VALIDATION_TIMEOUT_MS=5000

# ============================================
# MONITORING
# ============================================
# Enable detailed logging
MULTI_MODEL_DEBUG=false

# Log model decisions
LOG_MODEL_DECISIONS=true

# Track latency metrics
TRACK_LATENCY=true

# ============================================
# FALLBACK SETTINGS
# ============================================
# Disable fallback (fail fast for testing)
DISABLE_FALLBACK=false

# Failure threshold before marking model unhealthy
MODEL_FAILURE_THRESHOLD=3

# Time window for failure tracking (ms)
MODEL_FAILURE_WINDOW_MS=300000

# ============================================
# LOCAL DEVELOPMENT FALLBACKS
# ============================================
# These are used if Key Vault is not accessible
# DO NOT COMMIT WITH REAL VALUES
AZURE_SWEDEN_API_KEY=your-key-here
AZURE_EASTUS_API_KEY=your-key-here
AZURE_EASTUS_FOUNDRY_API_KEY=your-key-here
AZURE_EASTUS2_8781_API_KEY=your-key-here
AZURE_EASTUS2_9894_API_KEY=your-key-here