# Production Environment Variables
# Copy to .env.production and fill in actual values

# Application
NODE_ENV=production
PORT=3000
APP_URL=https://app.pathfinity.com
API_URL=https://api.pathfinity.com

# Database
DATABASE_URL=postgresql://username:password@hostname:5432/pathfinity
DB_USER=pathfinity_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_POOL_SIZE=20

# Redis Cache
REDIS_URL=redis://hostname:6379
REDIS_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# OpenAI API
OPENAI_API_KEY=sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXX
OPENAI_FALLBACK_KEY=sk-XXXXXXXXXXXXXXXXXXXXXXXXXXXXX
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# YouTube API
YOUTUBE_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
YOUTUBE_API_KEY_2=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
YOUTUBE_API_KEY_3=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
YOUTUBE_QUOTA_PER_KEY=10000

# Authentication
AUTH0_DOMAIN=pathfinity.auth0.com
AUTH0_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXXXXX
AUTH0_CLIENT_SECRET=XXXXXXXXXXXXXXXXXXXXXXXXXXXXX
JWT_SECRET=CHANGE_THIS_VERY_LONG_RANDOM_STRING
SESSION_TIMEOUT=3600

# AWS Services
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=AKIAXXXXXXXXXXXXX
AWS_SECRET_ACCESS_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXX
S3_BUCKET=pathfinity-assets
CLOUDFRONT_DISTRIBUTION_ID=EXXXXXXXXXXXXX

# Monitoring
DATADOG_API_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXX
DATADOG_APP_KEY=XXXXXXXXXXXXXXXXXXXXXXXXXXXXX
SENTRY_DSN=https://XXXXXXXXXXXXXXXXXXXXXXXXXXXXX@sentry.io/XXXXXXX
GRAFANA_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Rate Limiting
RATE_LIMIT_PER_STUDENT=60
RATE_LIMIT_PER_SCHOOL=1000
RATE_LIMIT_WINDOW=60000

# Cache Configuration
CACHE_TTL_NARRATIVES=2592000  # 30 days
CACHE_TTL_VIDEOS=604800       # 7 days
CACHE_TTL_STATIC=31536000     # 365 days
CACHE_MAX_ITEMS=10000

# Cost Thresholds
DAILY_COST_LIMIT=500
MONTHLY_COST_LIMIT=15000
COST_ALERT_THRESHOLD=0.8

# Feature Flags
ENABLE_YOUTUBE_INTEGRATION=true
ENABLE_NARRATIVE_CACHE=true
ENABLE_FALLBACK_CONTENT=true
ENABLE_COST_TRACKING=true
ENABLE_A_B_TESTING=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=cloudwatch

# Security
CSRF_SECRET=CHANGE_THIS_RANDOM_STRING
CORS_ORIGINS=https://app.pathfinity.com,https://pathfinity.com
SECURE_COOKIES=true
HTTPS_ONLY=true

# Email Service
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=SG.XXXXXXXXXXXXXXXXXXXXXXXXXXXXX
FROM_EMAIL=noreply@pathfinity.com

# Compliance
COPPA_COMPLIANT=true
FERPA_COMPLIANT=true
GDPR_COMPLIANT=true
DATA_RETENTION_DAYS=365