{
  "dashboard": {
    "id": null,
    "title": "Pathfinity Production Monitoring",
    "tags": ["pathfinity", "production", "ai-education"],
    "timezone": "UTC",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "gridPos": {
          "h": 4,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "targets": [
          {
            "expr": "up",
            "legendFormat": "Services Up",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "Requests/sec",
            "refId": "B"
          },
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "Error Rate",
            "refId": "C"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th Response Time",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 0.8
                },
                {
                  "color": "red",
                  "value": 0.9
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "AI Character Performance",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 4
        },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(ai_character_response_duration_seconds_bucket[5m]))",
            "legendFormat": "{{ character }} - 95th percentile",
            "refId": "A"
          },
          {
            "expr": "rate(ai_character_requests_total[5m])",
            "legendFormat": "{{ character }} - Requests/sec",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (seconds)",
            "min": 0
          },
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "thresholds": [
          {
            "value": 5,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 3,
        "title": "Database Performance",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 4
        },
        "targets": [
          {
            "expr": "rate(pg_stat_statements_mean_time_ms[5m])",
            "legendFormat": "Average Query Time (ms)",
            "refId": "A"
          },
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "Active Connections",
            "refId": "B"
          },
          {
            "expr": "rate(pg_stat_database_deadlocks[5m])",
            "legendFormat": "Deadlocks/sec",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Query Time (ms)",
            "min": 0
          },
          {
            "label": "Connections",
            "min": 0
          }
        ],
        "thresholds": [
          {
            "value": 1000,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 4,
        "title": "Security Metrics",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 12
        },
        "targets": [
          {
            "expr": "rate(http_requests_total{status=\"401\"}[5m])",
            "legendFormat": "Unauthorized Attempts/sec",
            "refId": "A"
          },
          {
            "expr": "rate(auth_failed_attempts_total[5m])",
            "legendFormat": "Failed Logins/sec",
            "refId": "B"
          },
          {
            "expr": "rate(ai_content_filtered_total[5m])",
            "legendFormat": "Content Filtered/sec",
            "refId": "C"
          },
          {
            "expr": "rate(sql_injection_attempts_total[5m])",
            "legendFormat": "SQL Injection Attempts/sec",
            "refId": "D"
          }
        ],
        "yAxes": [
          {
            "label": "Events/sec",
            "min": 0
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [10],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "2m",
          "frequency": "10s",
          "handler": 1,
          "name": "Security Events Alert",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 5,
        "title": "Compliance Monitoring",
        "type": "stat",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 12
        },
        "targets": [
          {
            "expr": "rate(student_data_access_unauthorized_total[1h])",
            "legendFormat": "Unauthorized Student Data Access",
            "refId": "A"
          },
          {
            "expr": "rate(underage_registration_without_consent_total[1h])",
            "legendFormat": "COPPA Violations",
            "refId": "B"
          },
          {
            "expr": "rate(audit_log_failures_total[5m])",
            "legendFormat": "Audit Log Failures",
            "refId": "C"
          },
          {
            "expr": "data_retention_violation_total",
            "legendFormat": "Data Retention Violations",
            "refId": "D"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "red",
                  "value": 0.001
                }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "User Engagement Metrics",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 20
        },
        "targets": [
          {
            "expr": "rate(user_sessions_total[1h])",
            "legendFormat": "Active Sessions/hour",
            "refId": "A"
          },
          {
            "expr": "rate(user_session_abandonment_total[1h]) / rate(user_sessions_total[1h])",
            "legendFormat": "Session Abandonment Rate",
            "refId": "B"
          },
          {
            "expr": "rate(assessments_completed_total[1h])",
            "legendFormat": "Assessments Completed/hour",
            "refId": "C"
          },
          {
            "expr": "rate(ai_character_interactions_total[1h])",
            "legendFormat": "AI Interactions/hour by {{ character }}",
            "refId": "D"
          }
        ],
        "yAxes": [
          {
            "label": "Count/hour",
            "min": 0
          },
          {
            "label": "Rate",
            "min": 0,
            "max": 1
          }
        ]
      },
      {
        "id": 7,
        "title": "Infrastructure Health",
        "type": "graph",
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 20
        },
        "targets": [
          {
            "expr": "(100 - (avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100))",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          },
          {
            "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100",
            "legendFormat": "Memory Usage %",
            "refId": "B"
          },
          {
            "expr": "(1 - (node_filesystem_avail_bytes / node_filesystem_size_bytes)) * 100",
            "legendFormat": "Disk Usage %",
            "refId": "C"
          },
          {
            "expr": "kube_pod_status_ready{condition=\"true\"}",
            "legendFormat": "Ready Pods",
            "refId": "D"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0,
            "max": 100
          },
          {
            "label": "Pod Count",
            "min": 0
          }
        ],
        "thresholds": [
          {
            "value": 80,
            "colorMode": "critical",
            "op": "gt"
          }
        ]
      },
      {
        "id": 8,
        "title": "AI Cost Monitoring",
        "type": "stat",
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 28
        },
        "targets": [
          {
            "expr": "rate(ai_character_cost_total[1h])",
            "legendFormat": "{{ character }} - Cost/hour",
            "refId": "A"
          },
          {
            "expr": "rate(ai_character_tokens_total[1h])",
            "legendFormat": "{{ character }} - Tokens/hour",
            "refId": "B"
          },
          {
            "expr": "sum(rate(ai_character_cost_total[24h]))",
            "legendFormat": "Total Daily Cost",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 50
                },
                {
                  "color": "red",
                  "value": 100
                }
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "Alert Status",
        "type": "table",
        "gridPos": {
          "h": 10,
          "w": 24,
          "x": 0,
          "y": 34
        },
        "targets": [
          {
            "expr": "ALERTS{alertstate=\"firing\"}",
            "legendFormat": "",
            "refId": "A",
            "format": "table",
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "__name__": true,
                "job": true,
                "instance": true
              },
              "indexByName": {},
              "renameByName": {
                "alertname": "Alert Name",
                "severity": "Severity",
                "alertstate": "State",
                "description": "Description"
              }
            }
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "align": "left",
              "displayMode": "auto"
            }
          },
          "overrides": [
            {
              "matcher": {
                "id": "byName",
                "options": "Severity"
              },
              "properties": [
                {
                  "id": "custom.cellOptions",
                  "value": {
                    "type": "color-background"
                  }
                },
                {
                  "id": "mappings",
                  "value": [
                    {
                      "options": {
                        "critical": {
                          "color": "red",
                          "index": 0
                        },
                        "warning": {
                          "color": "yellow",
                          "index": 1
                        },
                        "info": {
                          "color": "blue",
                          "index": 2
                        }
                      },
                      "type": "value"
                    }
                  ]
                }
              ]
            }
          ]
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "constant",
          "current": {
            "value": "production",
            "text": "production"
          }
        },
        {
          "name": "character",
          "type": "query",
          "query": "label_values(ai_character_requests_total, character)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        },
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up, job)",
          "refresh": 1,
          "multi": true,
          "includeAll": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "Prometheus",
          "expr": "increase(deployment_timestamp[1m])",
          "iconColor": "blue",
          "lineColor": "blue",
          "textFormat": "Deployment: {{ deployment_version }}"
        },
        {
          "name": "Critical Alerts",
          "datasource": "Prometheus",
          "expr": "ALERTS{severity=\"critical\", alertstate=\"firing\"}",
          "iconColor": "red",
          "lineColor": "red",
          "textFormat": "ðŸš¨ {{ alertname }}: {{ description }}"
        }
      ]
    },
    "links": [
      {
        "title": "Pathfinity Documentation",
        "url": "https://docs.pathfinity.ai",
        "type": "link",
        "icon": "doc"
      },
      {
        "title": "Runbook Central",
        "url": "https://docs.pathfinity.ai/runbooks",
        "type": "link",
        "icon": "bolt"
      },
      {
        "title": "Alert Manager",
        "url": "https://alertmanager.pathfinity.ai",
        "type": "link",
        "icon": "bell"
      }
    ]
  }
}